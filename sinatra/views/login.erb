Login Form
<% if @errors %>
  <% @errors.each do |error| %>
    <small style="color:red"> <%= error[:message] %> </small>
  <% end %>
<% end %>
<form action="/login" method="POST">
  <label>
    Email:
    <input type="email" name="email">
  </label>
  <label>
    Password:
    <input type="password" name="password">
  </label>

  <input type="submit" value="Submit">
</form>
